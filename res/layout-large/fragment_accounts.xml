<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical" >

    <TextView 
	    android:id="@+id/textAccountName" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"	    
	    android:text= "@string/sinc_accounts"
	    android:paddingLeft="8dp"	    
	    android:paddingTop="15dp"	   
	    android:textSize="20sp"/> 
    
    <TextView 
	    android:id="@+id/textUserName"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textColor="#8fb64f"
	    android:textSize="20sp"	        
	    android:paddingTop="15dp"	
	    android:paddingLeft="6dp"
	    android:layout_toRightOf="@+id/textAccountName"
	    android:paddingBottom="10dp"/> 
	    
    <TextView 
	    android:id="@+id/textAccountSpace" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"	    
	    android:text= "@string/spaceAvaliable"
	    android:layout_below="@+id/textUserName"
	    android:paddingLeft="8dp"	   
	    android:textSize="19sp"/> 
    
    <TextView 
	    android:id="@+id/textUserSpace"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:textColor="#6a83bc"
	    android:textSize="19sp"		
	    android:paddingLeft="6dp"
	    android:layout_below="@+id/textUserName"
	    android:layout_toRightOf="@+id/textAccountSpace"
	    android:paddingBottom="10dp"/> 
	    
    <TextView 
	    android:id="@+id/textUserGB"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textSize="19sp"	 	
	    android:paddingLeft="6dp"
	    android:text= "@string/gb"
	    android:layout_below="@+id/textUserName"
	    android:layout_toRightOf="@+id/textUserSpace"
	    android:paddingBottom="10dp"/> 
    
	<LinearLayout android:id="@+id/textDB"
	    android:paddingTop="15dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/textUserSpace"
	    android:paddingLeft="6dp"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/iconDB"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:paddingLeft="2dp"
	        android:paddingRight="6dp"
	        android:src="@drawable/dropboxicon" />
	
	    <TextView
	        android:id="@+id/labelDB"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text= "@string/drpbx"	
	        android:textSize="20sp" />
    
    </LinearLayout>

	<ListView
		android:id="@+id/DBAccounts" 
		android:layout_below="@+id/textDB"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" > 
	</ListView>
	
	<LinearLayout android:id="@+id/textB"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/DBAccounts"
	    android:paddingLeft="6dp"	    
	    android:paddingTop="15dp"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/iconB"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:paddingLeft="2dp"
	        android:paddingRight="6dp"
	        android:src="@drawable/boxicon" />
	
	    <TextView
	        android:id="@+id/labelB"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text= "@string/bx"	
	        android:textSize="20sp" />
    
    </LinearLayout> 

	<ListView
		android:id="@+id/BAccounts" 
		android:layout_below="@+id/textB"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" > 
	</ListView>

</RelativeLayout> 
