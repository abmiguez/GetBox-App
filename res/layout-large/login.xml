<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
	    android:paddingLeft="8dp"
	    android:paddingRight="8dp"
	    android:background="#fff">
	<ImageView
       android:id="@+id/imageViewLogin"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" 
       android:maxWidth="300dip"
   		android:scaleType="centerCrop"
        android:adjustViewBounds="true"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="100dp"
       android:src="@drawable/getbox_logo"/>
	
    <EditText
       android:id="@+id/edtTxtLgnUser"
       android:inputType="text"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/imageViewLogin"
       android:layout_marginTop="35dp"  
	   android:textSize="20sp"
       android:hint="@string/username"   />
   
   <EditText
       android:id="@+id/edtTxtLgnPass"
       android:inputType="textPassword"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/edtTxtLgnUser"
       android:hint="@string/password"  
       android:layout_marginTop="10dp" 
       android:textSize="20sp" />

   <Button
       android:id="@+id/buttonLgnLogin"
       android:layout_width="fill_parent"
       android:layout_height="70dp"
       android:gravity ="center"       
       android:background="@drawable/button_background"
       android:layout_below="@+id/edtTxtLgnPass"
       android:text="@string/buttonLogin"       
       android:layout_marginTop="25dp"
       android:textSize="20sp"
       android:textColor="#ffffff"/>

   <Button
       android:id="@+id/buttonLgnRegister"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/buttonLgnLogin"
       android:layout_marginTop="25dp"
       android:gravity ="center"  
       android:background="@drawable/button_background_reg"
       android:text="@string/buttonRegister"
       android:textColor="#000000"
       android:textSize="18sp" />

</RelativeLayout>